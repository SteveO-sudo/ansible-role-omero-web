#!/bin/sh
# {{ ansible_managed }}
# Regenerate the omero-web configuration:
# {{ omero_web_basedir }}/{{ omero_web_symlink }}/etc/grid/config.xml

set -e

for f in {{ omero_web_basedir }}/config/*.omero; do
    {{ omero_web_basedir }}/venv/bin/python {{ omero_web_basedir }}/{{ omero_web_symlink }}/bin/omero load "$f"
done
